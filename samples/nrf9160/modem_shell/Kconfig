source "Kconfig.zephyr"

menu "Nordic Modem Shell config"

config MOSH_IPERF3
	bool  "Enable iperf3 support"
    default y
	select NRF_IPERF3

config MOSH_SOCK
	bool  "Enable socket tool support"
    default y

config MOSH_PING
	bool  "Enable ICMP ping support"
    default y

config MOSH_LTELC
	bool  "Enable LTE link control support"
    depends on LTE_LINK_CONTROL
    depends on SETTINGS
    default y

config MOSH_CURL
	bool  "Enable CURL"
    default y

config MOSH_GNSS
	bool  "Enable GNSS support"
	default y

config MOSH_PPP
	bool  "Enable PPP support"
	default n

config MOSH_SMS
	bool  "Enable SMS support"
    default y

config MOSH_FOTA
	bool "Enable FOTA support"
	default y

if MOSH_LTELC
menu "MoSH LTELC command selections"

config MOSH_LTELC_SETT_NORMAL_MODE_AT_CMD_STR_LEN
	int "configure string length for custom AT cmds stored in settings and used when going to normal mode"
	default 127

endmenu	
endif #MOSH_LTELC

if MOSH_CURL
menu "MOSH CURL selections"

#invisible configs:
config MOSH_CURL_LIB
	bool
    default y

config MOSH_CURL_TOOL
	bool
    default y

config MOSH_CURL_FUNCTIONAL_CHANGES
	bool
    default y

endmenu #MOSH_CURL
endif #MOSH_CURL

choice MOSH_GNSS_API
	bool "Used GNSS API"
	depends on MOSH_GNSS
	default MOSH_GNSS_API_SOCKET
	help
	  Used GNSS API type.

config MOSH_GNSS_API_SOCKET
	bool "GNSS socket API"

config MOSH_GNSS_API_GPS_DRIVER
	bool "GPS driver"

endchoice

config MOSH_GNSS_ENABLE_LNA
	bool "Enable Low Noise Amplifier (LNA) during startup"
	depends on MOSH_GNSS

endmenu # Modem Shell

#menu "Zephyr Kernel"
#source "Kconfig.zephyr"
#endmenu