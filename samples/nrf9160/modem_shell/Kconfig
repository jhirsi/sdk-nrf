source "Kconfig.zephyr"

menu "Nordic FTA config"

config FTA_IPERF3
	bool  "Enable FTA iperf3 support"
    default y
	select NRF_IPERF3

config FTA_SOCK
	bool  "Enable FTA socket tool support"
    default y

config FTA_PING
	bool  "Enable FTA ICMP ping support"
    default y

config FTA_LTELC
	bool  "Enable FTA LTE link control support"
    depends on LTE_LINK_CONTROL
    depends on SETTINGS
    default y

config FTA_LTELC_AUTO_CONNECT
	bool  "Connect automatically to network during startup"
	depends on LTE_LINK_CONTROL
	default y

config FTA_CURL
	bool  "Enable CURL"
    default y

config FTA_GNSS
	bool  "Enable GNSS support"
	default y

config FTA_PPP
	bool  "Enable PPP support"
	default n

config FTA_SMS
	bool  "Enable SMS support"
    default y

config FTA_FOTA
	bool "Enable FOTA support"
	default y

if FTA_LTELC
menu "MoSH LTELC command selections"

config FTA_LTELC_SETT_NORMAL_MODE_AT_CMD_STR_LEN
	int "configure string length for custom AT cmds stored in settings and used when going to normal mode"
	default 127

endmenu	
endif #FTA_LTELC

if FTA_CURL
menu "FTA CURL selections"

#invisible configs:
config FTA_CURL_LIB
	bool
    default y

config FTA_CURL_TOOL
	bool
    default y

config FTA_CURL_FUNCTIONAL_CHANGES
	bool
    default y

endmenu #FTA CURL
endif #FTA_CURL

choice FTA_GNSS_API
	bool "Used GNSS API"
	depends on FTA_GNSS
	default FTA_GNSS_API_SOCKET
	help
	  Used GNSS API type.

config FTA_GNSS_API_SOCKET
	bool "GNSS socket API"

config FTA_GNSS_API_GPS_DRIVER
	bool "GPS driver"

endchoice

config FTA_GNSS_ENABLE_LNA
	bool "Enable Low Noise Amplifier (LNA) during startup"
	depends on FTA_GNSS

endmenu #FTA

#menu "Zephyr Kernel"
#source "Kconfig.zephyr"
#endmenu