source "Kconfig.zephyr"

menu "Nordic FTA config"

config FTA_IPERF3
	bool  "Enable FTA iperf3 support"
    default y

config FTA_SOCK
	bool  "Enable FTA socket tool support"
    default y

config FTA_PING
	bool  "Enable FTA ICMP ping support"
    default y

config FTA_LTELC
	bool  "Enable FTA LTE link control support"
    default y

config FTA_CURL
	bool  "Enable CURL"
    default y

config FTA_GNSS
	bool  "Enable GNSS support"
	default y

if FTA_IPERF3
menu "FTA iperf3 selections"

config FTA_IPERF3_HOST_NAME
	string "configure host name for iperf3 to be sent as a part of cookie"
	default "nrf9160"

config FTA_IPERF3_RESULTS_WAIT_TIME
	int "Configure the time to be waited to send and recv results"
	default 15

config FTA_IPERF3_CLIENT_TEST_START_TIME
	int "Configure the time to be waited after ctrl socket has been created to actual test start"
	default 15

#invisible configs:
config FTA_IPERF3_NONBLOCKING_CLIENT_CHANGES
	bool
    default y

config FTA_IPERF3_FUNCTIONAL_CHANGES
	bool
    default y
	
endmenu #FTA iperf3
endif #FTA_IPERF3


if FTA_CURL
menu "FTA CURL selections"

#invisible configs:
config FTA_CURL_LIB
	bool
    default y

config FTA_CURL_TOOL
	bool
    default y

endmenu #FTA CURL
endif #FTA_CURL

endmenu #FTA

#menu "Zephyr Kernel"
#source "Kconfig.zephyr"
#endmenu