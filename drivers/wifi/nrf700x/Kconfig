config NRF_700X
	bool "nRF700x driver"
	select NRFX_QSPI
	select WPA_SUPP
	select NRFX_SPIM
	select NRFX_SPIM3
	select NRFX_SPIM4
	select WIFI
	select SPI
	help
	  Nordic Wi-Fi Driver

module = WIFI_NRF
module-str = WIFI_NRF
source "subsys/logging/Kconfig.template.log_config"
